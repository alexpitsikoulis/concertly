<h2>add new show for <a href="/artists/{{artist._id}}">{{artist.name}}</a></h2>

<form action="/artists/{{artist._id}}/shows" method="POST">
    <label for="name">name:</label>
        <input type="text" id="name" name="name">
    <label for="city">city:</label>
        <input type="text" id="city" name="city">
    <label for="year">year:</label>
        <input type="number" id="year" name="year">
    <label for="video-link">video embed link:</label>
        <input type="text" id="video-link" name="videoLink">
    <input type="submit" value="create new show">
</form>